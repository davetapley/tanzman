<%= form_for [refinery, :courses_admin, @course] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @course,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description  -%>

  </div>

  <div class='field'>
    <%= f.label :prerequisite -%>
    <%= f.select :prerequisite, @course.valid_prerequisites, selected: @course.prerequisite.try(:id), include_blank: true %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.courses.admin.courses.course'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @course.name) %>
<% end -%>
